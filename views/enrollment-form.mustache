<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Enrolment Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            background-color: #f8f9fa;
        }
        h1 {
            margin-bottom: 20px;
        }
        .form-container {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 30px;
            margin-top: 20px;
        }
        .btn-enroll {
            margin-top: 20px;
        }
    </style>
</head>
<body>

    <div class="container mt-5">
        <h1 class="text-center">Enrolment Form</h1>

        <div class="form-container">
            <form action="/enroll" method="POST">
                <div class="mb-3">
                    <label for="course_code" class="form-label">Course</label>
                    <select name="course_code" id="course_code" class="form-select">
                        {{# courses }}
                        <option value="{{ course_code }}">{{ course_name }}</option>
                        {{/ courses }}
                    </select>
                </div>

                <div class="mb-3">
                    <label for="student_code" class="form-label">Student</label>
                    <select name="student_code" id="student_code" class="form-select">
                        {{# students }}
                        <option value="{{ student_code }}">{{ student_name }}</option>
                        {{/ students }}
                    </select>
                </div>

                <div class="mb-3">
                    <label for="enrollment_date" class="form-label">Enrollment Date</label>
                    <input type="date" name="enrollment_date" id="enrollment_date" class="form-control">
                </div>

                <button type="submit" class="btn btn-primary btn-enroll">Enroll Student</button>
            </form>
        </div>

        <hr class="mt-5" />

        <div class="text-center">
            <a href="/courses" class="btn btn-secondary">List of Courses</a>
            <a href="/students" class="btn btn-secondary">List of Students</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>
</html>
