<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ course.course_name }} - Course Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            background-color: #f8f9fa;
        }
        h1, h2 {
            font-weight: 600;
        }
        .card {
            margin-top: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .btn-outline-secondary {
            border: 2px solid #6c757d;
        }
    </style>
</head>
<body class="bg-light">

    <div class="container mt-5">
        <h1 class="text-center">{{ course.course_code }}</h1>
        <h2 class="text-danger text-center">{{ course.course_name }}</h2>

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Enrolled Students</h5>
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>Student Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{# enrolees }}
                        <tr>
                            <td>{{ student_code }}</td>
                            <td>{{ student_name }}</td>
                        </tr>
                        {{/ enrolees }}
                    </tbody>
                </table>
            </div>
        </div>

        <hr class="my-4">
        
        <div class="text-center">
            <a href="/courses" class="btn btn-outline-secondary">List of Courses</a>
            <a href="/students" class="btn btn-outline-secondary mt-2">List of Students</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>
</html>
